@{
    ViewBag.Title = "Home Page";
}

@*<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Home</li>
    </ol>
</nav>*@

<br />
<div class="jumbotron">
    <h1>Mission Matters</h1>
    <p class="lead">"Go ye unto all the world and preach the gospel unto every creature" - Mark 16: 15</p>
    <p><a href=@Url.Action("Missions", "Home") class="btn btn-primary btn-lg">Find Your Mission Here!</a></p>
</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Content/Images/busan.jpg" alt="Busan">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Busan, South Korea</h5>
                </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/Images/quebeccarousel.jpg" alt="Quebec">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Quebec City, Quebec</h5>
                </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/Images/sanantonio.jpg" alt="Texas">
                <div class="carousel-caption d-none d-md-block">
                    <h5>San Antonio, Texas</h5>
                </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<br /><br />

<div class="row">
    <div class="col-md-4">
        <div class="card" style="width: 20rem;">
            <div class="card-body">
                <img align="right" src="~/Content/Images/list.png" alt="Card image cap">
                <h5 class="card-title">Mission List</h5>
                <p class="card-text">See a list of available missions and past questions.</p>
                <a href=@Url.Action("Missions", "Home") class="btn btn-primary">View List</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card" style="width: 20rem;">
            <div class="card-body">
                <img align="right" src="~/Content/Images/conversation.png" alt="Card image cap">
                <h5 class="card-title">About</h5>
                <p class="card-text">Learn more about why Mission Matters... matters!</p>
                <a href=@Url.Action("About", "Home") class="btn btn-primary">About Us</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card" style="width: 20rem;">
            <div class="card-body">
                <img align="right" src="~/Content/Images/contact.png" alt="Card image cap">
                <h5 class="card-title">CONTACT</h5>
                <p class="card-text">Questions? Concerns? Contact us directly!</p>
                <a href=@Url.Action("ContactForm", "Home") class="btn btn-primary">Contact Us</a>
            </div>
        </div>
    </div>
</div>


