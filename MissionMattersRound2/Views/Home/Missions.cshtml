
@{
    ViewBag.Title = "Missions";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href=@Url.Action("Index", "Home")>Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Missions</li>
    </ol>
</nav>

<h2 class="cornflower">Missions</h2>

<select id="list">
    <option value="">Pick a mission!</option>
    <option value=@Url.Action("Montreal", "Home")>Montreal Canada Mission</option>
    <option value=@Url.Action("Seoul", "Home")>Seoul Korea South Mission</option>
    <option value=@Url.Action("Lubbock", "Home")>Texas Lubbock Mission</option>
</select>

<script>
    document.getElementById("list").onchange = function() {
        if (this.selectedIndex!==0) {
            window.location.href = this.value;
        }
    };
</script>