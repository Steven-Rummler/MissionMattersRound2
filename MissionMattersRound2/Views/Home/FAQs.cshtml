@model MissionMattersRound2.Models.Mission

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href=@Url.Action("Index", "Home")>Home</a></li>
        <li class="breadcrumb-item"><a href=@Url.Action("Missions", "Home")>Missions</a></li>
        <li class="breadcrumb-item" ><a href=@Url.Action("Mission", "Home", new { id = Model.missionID })>@Html.DisplayFor(model => model.missionName)</a></li>
        <li class="breadcrumb-item active" aria-current="page">FAQs</li>
    </ol>
</nav>

<div class="jumbotron">
    <table class="table">
        <tr>
            <th>
                Question
            </th>
            <th>
                Answer
            </th>
            <th></th>
        </tr>


        @foreach (var item in Model.missionQuestions.ToList())
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.question)


                </td>
                <td>
                    @if (item.answer != null)
                    {
                        @Html.DisplayFor(model => item.answer)
                    }


                </td>
                <td>
                    @if (item.answer != null)
                    {
                        @Html.ActionLink("Edit Answer", "Edit", "Home", new { id = item.missionQuestionID }, new { })
                    }
                    else
                    {
                        @Html.ActionLink("Answer", "Edit", "Home", new { id = item.missionQuestionID }, new { })
                    }
                </td>

            </tr>
        }

    </table>

    <br />

    @Html.ActionLink("New Question", "Create", "Home", new { id = Model.missionID@*, uID = Model.userID*@}, new { })

</div>
